{
	"include": ["**/*.ts"],
	"compilerOptions": {
		"lib": [
			"es2024",
			"ESNext.Array",
			"ESNext.Collection",
			"ESNext.Iterator",
			"ESNext.Promise"
		],
		"module": "nodenext",
		"target": "es2024",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"moduleResolution": "node16",
		"isolatedModules": true,
		"verbatimModuleSyntax": true,
		"rewriteRelativeImportExtensions": true,
		"erasableSyntaxOnly": true,
		"noEmit": true,
		/* Strictness */
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitOverride": true
	}
}
